{
  "name": "@laboratory/common",
  "version": "1.0.0",
  "description": "",
  "author": "",
  "license": "ISC",
  "type": "module",
  "main": "./esm/index.js",
  "types": "./types/index.d.ts",
  "exports": {
    ".": {
      "import": "./esm/index.js",
      "require": "./cjs/index.js",
      "types": "./types/components/index.d.ts",
      "default": "./esm/index.js"
    },
    "./components": {
      "import": "./esm/components/index.js",
      "require": "./cjs/components/index.js",
      "types": "./types/components/index.d.ts",
      "default": "./esm/components/index.js"
    },
    "./utils": {
      "import": "./esm/utils/index.js",
      "require": "./cjs/utils/index.js",
      "types": "./types/utils/index.d.ts",
      "default": "./esm/utils/index.js"
    },
    "./env-loader": {
      "import": "./esm/env-loader.js",
      "require": "./cjs/env-loader.js",
      "types": "./types/env-loader.d.ts",
      "default": "./esm/env-loader.js"
    },
    "./manifest-loader": {
      "import": "./esm/manifest-loader.js",
      "require": "./cjs/manifest-loader.js",
      "types": "./types/manifest-loader.d.ts",
      "default": "./esm/manifest-loader.js"
    }
  },
  "scripts": {
    "dev": "rollup --config --watch --environment mode:development",
    "build": "rollup --config --environment mode:production",
    "pack": "npm run build && npm pack ./dist",
    "type-check": "tsc --noEmit",
    "lint": "eslint src/* --ext .ts",
    "remove-node-modules": "rimraf node_modules"
  },
  "devDependencies": {
    "@babel/core": "^7.24.3",
    "@babel/preset-env": "^7.24.3",
    "@eslint/js": "^9.0.0",
    "@rollup/plugin-babel": "^6.0.4",
    "@rollup/plugin-commonjs": "^25.0.8",
    "@rollup/plugin-json": "^6.1.0",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@rollup/plugin-replace": "^5.0.5",
    "@rollup/plugin-terser": "^0.4.4",
    "@rollup/plugin-typescript": "^11.1.6",
    "babel-loader": "^9.1.3",
    "dotenv": "^16.4.5",
    "dotenv-expand": "^11.0.6",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "prettier": "^3.2.5",
    "rimraf": "^5.0.5",
    "rollup": "^4.13.0",
    "rollup-plugin-copy": "^3.5.0",
    "typescript": "^5.4.3",
    "typescript-eslint": "^7.7.0"
  }
}
